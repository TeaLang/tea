
internal say_hello(name = 'World') {
	echo 'Hello, $name!'
}

say_hello()

internal set_field(key String, value String, dict Dict) {
	dict[key] = value
	return dict
}

var dict = [:]
dict = set_field('the key', 'the value', dict)
var_dump(dict)

internal show_file_path(filename String = none) {
	if filename === none {
		filename = __FILE__
	}
	else {
		filename = realpath(filename)
	}

	echo filename
}

show_file_path()
