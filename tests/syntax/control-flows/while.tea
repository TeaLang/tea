
// normal while
i = 0
while i < 10 {
	// the post-condition
	continue when i == 5
	i += 1
}
catch ex {
	//
}

// always do the first loop
while #first or i > 5 {
	i -= 1
	break
}

// labeled loops
i = 0
#outer_loop while 1 {
	#inner_loop while true {
		i = i + 1
		continue #inner_loop when i < 3
		break #outer_loop when i > 5
	}
}
