#main

dict = [
	'a': 1,
	'b': '1',
	'c': [1]
]

echo "\nUse conditional expression:"

for key, value in dict {
	var result = value is Int
		? value + 2				// 3
		: (value is String
			? value .+ 2 	// 12
			: value .+ [2]	// [1, 2]
		)

	echo "Operation result for key '$key' is: "
	var_dump(result)
}

echo "\nUse if-elseif-else:"

for key, value in dict {
	var result Any
	if value is Int {
		result = value + 2			// 3
	}
	elseif value is String {
		result = value .+ 2		// 12
	}
	elseif value is Array {
		result = value .+ [2]		// [1, 2]
	}
	else {
		// would not be happened
	}

	echo "Operation value for key '$key' is: "
	var_dump(result)
}

