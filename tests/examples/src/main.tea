
var days = ['Monday', 'Tuesday', 'Wednesday']
var items String.Array = []
for i, day in days {
	items[] = "${i + 1}: ${day}"
}

echo items.join(', ')

echo   // print an empty line

internal say_hello(name = 'World') {
	echo 'Hello, ${name}!'
}

say_hello()

internal set_field(key String, value String, dict inout Dict) {
	dict[key] = value
}

var dict = [:]
set_field('the key', 'the value', dict)
var_dump(dict)  // ['the key': 'the value']

internal show_file_path(filename String = none) {
	if filename === none {
		filename = __FILE__
	}
	else {
		filename = realpath(filename)
	}

	echo filename
}

show_file_path()
