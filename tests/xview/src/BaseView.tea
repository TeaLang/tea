
public abstract BaseView: IView {
	name String

	protected props = [:]
	protected subviews = []

	construct(props Dict = none) {
		if props is Dict {
			this.props = props
		}
	}

	prop(key String, value Any) BaseView {
		this.props[key] = value
		return this
	}

	subview(view XView) BaseView {
		this.subviews[] = view
		return this
	}

	render() String {
		return <xview {this.props}>${this.subviews.join()}</xview>
	}

	__tostring() String {
		return this.render()
	}
}
